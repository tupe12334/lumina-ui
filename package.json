{
  "name": "lumina-ui-lib",
  "version": "0.1.1",
  "description": "UI component library for the Lumina project",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "vite build && tsc --emitDeclarationOnly",
    "dev": "vite build --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest --run",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:visual": "playwright test --project=chromium-visual",
    "test:visual:update": "playwright test --project=chromium-visual --update-snapshots",
    "test:visual:ui": "playwright test --project=chromium-visual --ui",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "release": "release-it",
    "release:dry": "release-it --dry-run",
    "release:patch": "release-it patch",
    "release:minor": "release-it minor",
    "release:major": "release-it major",
    "prepare": "husky"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "typescript",
    "lumina"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tupe12334/lumina-ui.git"
  },
  "bugs": {
    "url": "https://github.com/tupe12334/lumina-ui/issues"
  },
  "homepage": "https://github.com/tupe12334/lumina-ui#readme",
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.1",
    "@release-it/conventional-changelog": "^10.0.1",
    "@storybook/addon-essentials": "^8.3.6",
    "@storybook/addon-interactions": "^8.3.6",
    "@storybook/addon-links": "^8.3.6",
    "@storybook/blocks": "^8.3.6",
    "@storybook/react": "^8.3.6",
    "@storybook/react-vite": "^8.3.6",
    "@storybook/test": "^8.3.6",
    "@testing-library/jest-dom": "^6.9.0",
    "@testing-library/react": "^16.3.0",
    "@types/file-saver": "^2.0.7",
    "@types/lodash-es": "^4.17.12",
    "@types/path-browserify": "^1.0.3",
    "@types/react": "^18.3.11",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.3",
    "eslint": "^9.12.0",
    "eslint-config-agent": "^1.4.6",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "pixelmatch": "^7.1.0",
    "playwright": "^1.55.1",
    "playwright-testing-library": "^4.5.0",
    "release-it": "^19.0.5",
    "sharp": "^0.34.4",
    "storybook": "^8.3.6",
    "typescript": "^5.6.3",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.3",
    "vitest": "^2.1.2"
  },
  "packageManager": "pnpm@9.12.1",
  "dependencies": {
    "clsx": "^2.1.1",
    "copy-to-clipboard": "^3.3.3",
    "file-saver": "^2.0.5",
    "filesize": "^11.0.13",
    "lodash-es": "^4.17.21",
    "nanoid": "^5.1.6",
    "path-browserify": "^1.0.1"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "bash -c 'tsc --noEmit'"
    ]
  }
}
